{
  "manifest_version": 3,
  "name": "Fire Reader",
  "version": "1.0",
  "description": "A simple reader mode for any website, powered by Firecrawl.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["reader.css"],
      "matches": ["<all_urls>"]
    }
  ]
}